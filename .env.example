# WebsitesForMorons.com Environment Variables
# Copy this file to .env.local for development

# ===========================================
# Site Configuration
# ===========================================
NEXT_PUBLIC_SITE_URL=http://localhost:3000

SITE_URL=https://websitesformorons.com
NEXT_PUBLIC_SITE_NAME="WebsitesForMorons.com"

# ===========================================
# Contact Form / Email
# ===========================================
# Resend API (recommended)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxx
CONTACT_EMAIL=hello@websitesformorons.com

# Or use SMTP
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-user
# SMTP_PASSWORD=your-smtp-password
# SMTP_FROM=noreply@websitesformorons.com

# ===========================================
# Analytics
# ===========================================
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_VERCEL_ANALYTICS=true

# ===========================================
# CMS Integration (Optional)
# ===========================================
# Sanity.io
# NEXT_PUBLIC_SANITY_PROJECT_ID=
# NEXT_PUBLIC_SANITY_DATASET=production
# SANITY_API_TOKEN=

# Contentful
# CONTENTFUL_SPACE_ID=
# CONTENTFUL_ACCESS_TOKEN=
# CONTENTFUL_PREVIEW_TOKEN=

# ===========================================
# Payment Processing (Optional)
# ===========================================
# Stripe
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxx
# STRIPE_SECRET_KEY=sk_test_xxxx
# STRIPE_WEBHOOK_SECRET=whsec_xxxx

# ===========================================
# Authentication (Optional)
# ===========================================
# NextAuth.js
# NEXTAUTH_URL=http://localhost:3000
# NEXTAUTH_SECRET=your-secret-here

# ===========================================
# Database (Optional)
# ===========================================
# PostgreSQL (Supabase, Neon, etc.)
# DATABASE_URL=postgresql://user:password@host:5432/database

# ===========================================
# Third-Party Services (Optional)
# ===========================================
# Calendly for booking
# NEXT_PUBLIC_CALENDLY_URL=https://calendly.com/websitesformorons

# Crisp for live chat
# NEXT_PUBLIC_CRISP_WEBSITE_ID=

# ===========================================
# Feature Flags
# ===========================================
NEXT_PUBLIC_ENABLE_BLOG=true
NEXT_PUBLIC_ENABLE_PORTFOLIO=true
NEXT_PUBLIC_ENABLE_TESTIMONIALS=true

# ===========================================
# Development
# ===========================================
# NODE_ENV=development
# ANALYZE=false
